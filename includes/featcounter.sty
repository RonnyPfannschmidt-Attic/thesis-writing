
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{includes/featcounter}[2012/11/01 feature counters]

\newcounter{thefeatures}
\setcounter{thefeatures}{0}

\crefname{thefeatures}{feature}{features}



\newcommand\padfrom[1]{%
\StrLen{#1}[\templen]%
\StrGobbleRight{000}{\templen}%
#1}


\newcommand{\deffeat}[1]{%
\refstepcounter{thefeatures}%
\label{feat:#1}%
(\textbf{F\padfrom{\arabic{thefeatures}}})%
}

\crefformat{thefeatures}{#2\textbf{F\padfrom{#1}}#3}

\newcommand{\reffeat}[1]{\cref{feat:#1}}
